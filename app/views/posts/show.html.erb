<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<br><hr><br>

<h3>Total Comments <%= @post.comments.count %></h3>

<% @post.comments.each do |comment| %>
  <div>
    <%= comment.name %><br>
    <%= comment.body %>
    <%= link_to 'Delete', post_comment_path(@post, comment), method: :delete  %> 
  </div>
  <br>
<% end %>
<br><hr><br>
<%= form_for([@post, @post.comments.build]) do |c| %>
  <%= c.text_field :name %><br>
  <%= c.text_area :body %><br>
  <%= c.submit %>
<% end %>
